<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="#BFD8AF"/> <!-- Shadow màu xanh nhạt -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="12dp"/>
            <solid android:color="#FFFFFF"/> <!-- Nền trắng -->
            <stroke
                android:width="1dp"
                android:color="#7BA87B"/> <!-- Viền xanh nhạt -->
        </shape>
    </item>
</layer-list>