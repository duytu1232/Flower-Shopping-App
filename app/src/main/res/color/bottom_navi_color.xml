<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Khi được chọn: icon sẽ có màu vàng (bạn có thể chỉnh màu theo ý muốn) -->
    <item android:state_checked="true" android:color="@color/Yellow_light"/>
    <!-- Khi không được chọn: icon sẽ có màu trắng -->
    <item android:state_checked="false" android:color="@color/white"/>
</selector>
