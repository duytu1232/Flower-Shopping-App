<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFD8AF"
    tools:context=".User.Fragments.FragmentAccountUser">

    <!-- Header -->

    <!-- Nội dung chính, chiếm toàn bộ phần còn lại -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="564dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <!-- Avatar & Tên -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingVertical="16dp">

            <ImageButton
                android:id="@+id/UserAvatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:scaleType="centerCrop"
                android:src="@drawable/rabbit_avatar"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/editAvatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/edit_icon" />

            <TextView
                android:id="@+id/User_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="User"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Menu Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/order_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#98BB84"
                android:text="My Orders"
                android:textSize="16sp" />

            <Button
                android:id="@+id/settings_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#98BB84"
                android:text="Settings"
                android:textSize="16sp" />

            <Button
                android:id="@+id/about_us_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#98BB84"
                android:text="About Us"
                android:textSize="16sp" />

            <Button
                android:id="@+id/sign_out_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#98BB84"
                android:text="Sign Out"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>