<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_user_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên người dùng"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/edit_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/edit_user_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu (rỗng nếu không thay đổi)"
        android:inputType="textPassword"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/edit_user_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Vai trò (customer/admin/staff)"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/edit_user_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Trạng thái (active/locked)"
        android:inputType="text"
        android:minHeight="48dp" />

</LinearLayout>