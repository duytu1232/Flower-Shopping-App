<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_user_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên người dùng"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/edit_user_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/edit_user_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mật khẩu (rỗng nếu không thay đổi)"
        android:inputType="textPassword"
        android:minHeight="48dp" />

    <!-- Nhãn cho role -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vai trò"
        android:textColor="#888888"
        android:textSize="12sp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="2dp" />

    <Spinner
        android:id="@+id/spinner_user_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/roles"
        android:minHeight="48dp"
        android:prompt="@string/select_role_prompt"
        android:background="@drawable/spinner_background_1"
        android:spinnerMode="dropdown"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

    <!-- Nhãn cho status -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trạng thái"
        android:textColor="#888888"
        android:textSize="12sp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="2dp" />

    <Spinner
        android:id="@+id/spinner_user_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/statuses"
        android:minHeight="48dp"
        android:prompt="@string/select_status_prompt"
        android:background="@drawable/spinner_background_1"
        android:spinnerMode="dropdown"
        android:paddingStart="8dp"
        android:paddingEnd="8dp" />

    <EditText
        android:id="@+id/edit_user_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Họ và tên"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/edit_user_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Số điện thoại"
        android:inputType="phone"
        android:minHeight="48dp" />

</LinearLayout>