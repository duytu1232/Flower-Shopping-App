<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Tên sản phẩm -->
    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Điểm trung bình đánh giá -->
    <TextView
        android:id="@+id/average_rating_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average Rating: 0.0 (0 reviews)"
        android:textSize="16sp" />

    <!-- Nút viết đánh giá -->
    <Button
        android:id="@+id/write_review_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write a Review" />

    <!-- Spinner lọc đánh giá -->
    <Spinner
        android:id="@+id/filter_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/review_filters" />

    <!-- Nút sắp xếp -->
    <Button
        android:id="@+id/sort_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort: Newest" />

    <!-- RecyclerView hiển thị danh sách đánh giá -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/review_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>